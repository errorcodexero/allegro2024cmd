{
    "initialization" : [
        {
            "type" : "input",
            "hardware" : {
                "type" : "dinput",
                "index" : 1,
                "value" : true
            }
        },
        {
            "type" : "input",
            "hardware" : {
                "type" : "ainput",
                "index" : 0,
                "value" : 0.0
            }
        },
        //
        // The XBox game controller
        //
        {
            "type" : "input",
            "hardware" : {
                "type" : "oidevice",
                "subtype" : "button-count",
                "index" : 0,
                "value" : 16
            }            
        },
        {
            "type" : "input",
            "hardware" : {
                "type" : "oidevice",
                "subtype" : "axis-count",
                "index" : 0,
                "value" : 6
            }            
        },
        //
        // The OI
        //
        {
            "type" : "input",
            "hardware" : {
                "type" : "oidevice",
                "subtype" : "button-count",
                "index" : 2,
                "value" : 16
            }            
        },
        {
            "type" : "input",
            "hardware" : {
                "type" : "oidevice",
                "subtype" : "axis-count",
                "index" : 2,
                "value" : 0
            }            
        }   
    ],
    "simulation" : [
        //
        // Enable auto mode
        //
        {
            "type" : "input",
            "time" : 1.0,
            "hardware" : {
                "type" : "driverstation",
                "subtype" : "mode",
                "index" : 0,
                "value" : "auto"
            }
        },
        //
        // Note sensor goes low, note detected in intake
        //
        {
            "type" : "input",
            "time" : 3.0,
            "hardware" : {
                "type" : "dinput",
                "index" : 1,
                "value" : false
            }
        },
        
        //
        // Note sensor goes high, note has passed the sensor on the way in
        //
        {
            "type" : "input",
            "time" : 3.1,
            "hardware" : {
                "type" : "dinput",
                "index" : 1,
                "value" : true
            }
        },
        //
        // Note sensor goes low, note detected in intake
        //
        {
            "type" : "input",
            "time" : 6.2,
            "hardware" : {
                "type" : "dinput",
                "index" : 1,
                "value" : false
            }
        },
        
        //
        // Note sensor goes high, note has passed the sensor on the way in
        //
        {
            "type" : "input",
            "time" : 6.3,
            "hardware" : {
                "type" : "dinput",
                "index" : 1,
                "value" : true
            }
        },
        //
        // Note sensor goes low, note detected in intake
        //
        {
            "type" : "input",
            "time" : 9.9,
            "hardware" : {
                "type" : "dinput",
                "index" : 1,
                "value" : false
            }
        },
        
        //
        // Note sensor goes high, note has passed the sensor on the way in
        //
        {
            "type" : "input",
            "time" : 10.0,
            "hardware" : {
                "type" : "dinput",
                "index" : 1,
                "value" : true
            }
        },
        {
            "type" : "input",
            "time" : 15.0,
            "hardware" : {
                "type" : "control",
                "subtype" : "exit",
                "index" : 2,
                "value" : true
            }
        }          
    ]
}
