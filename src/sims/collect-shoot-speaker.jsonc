{
    "initialization" : [
        {
            "type" : "input",
            "hardware" : {
                "type" : "dinput",
                "index" : 1,
                "value" : true
            }
        },
        {
            "type" : "input",
            "hardware" : {
                "type" : "ainput",
                "index" : 0,
                "value" : 0.0
            }
        }        
    ],
    "simulation" : [
        {
            "type" : "input",
            "time" : 2.0,
            "hardware" : {
                "type" : "driverstation",
                "subtype" : "mode",
                "index" : 0,
                "value" : "teleop"
            }
        },

        //
        // Set the note destination to Speaker
        //
        {
            "type" : "input",
            "time" : 2.8,
            "hardware" : {
                "type" : "oidevice",
                "subtype" : "2",
                "index" : 2,
                "value" : false
            }
        },
        {
            "type" : "input",
            "time" : 2.8,
            "hardware" : {
                "type" : "oidevice",
                "subtype" : "1",
                "index" : 2,
                "value" : true
            }
        },

        //
        // Press the collect button
        //
        {
            "type" : "input",
            "time" : 3.0,
            "hardware" : {
                "type" : "oidevice",
                "subtype" : "11",
                "index" : 2,
                "value" : true
            }
        },

        //
        // Note sensor goes low, note detected in intake
        //
        {
            "type" : "input",
            "time" : 4.0,
            "hardware" : {
                "type" : "dinput",
                "index" : 1,
                "value" : false
            }
        },
        
        //
        // Note sensor goes high, note has passed the sensor on the way in
        //
        {
            "type" : "input",
            "time" : 4.2,
            "hardware" : {
                "type" : "dinput",
                "index" : 1,
                "value" : true
            }
        },

        //
        // Release the collect button
        //
        {
            "type" : "input",
            "time" : 5.5,
            "hardware" : {
                "type" : "oidevice",
                "subtype" : "11",
                "index" : 2,
                "value" : false
            }
        },

        //
        // The shoot button is pressed on the OI to shoot into the AMP
        //
        {
            "type" : "input",
            "time" : 8.0,
            "hardware" : {
                "type" : "oidevice",
                "subtype" : "7",
                "index" : 2,
                "value" : true
            }
        },

        //
        // The shoot button is released
        //
        {
            "type" : "input",
            "time" : 9.0,
            "hardware" : {
                "type" : "oidevice",
                "subtype" : "7",
                "index" : 2,
                "value" : false
            }
        }
    ]
}
